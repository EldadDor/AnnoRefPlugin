	<actions>
		<action id="JumpSQLRef" class="com.idi.intellij.plugin.query.sqlref.action.findSqlRefUsageAction"
		        text="&amp;SQLRef Usage"
		        description="Go to SQLRef query in xml file or back to Class">
			<keyboard-shortcut keymap="$default" first-keystroke="ctrl shift b"/>
			<mouse-shortcut keystroke="control button1 doubleClick" keymap="$default"/>
			<add-to-group group-id="GoToMenu" anchor="last"/>
		</action>
		<!--  <action id="SQLRefNavigationReset" class="com.idi.intellij.plugin.query.sqlref.action.SQLRefNavigationResetAction" text="Reset Project SQLRefs"
